<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
        <solid
            android:color="@color/accent"/>

        <size
            android:width="50dp"
            android:height="50dp"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/secondary_text"/>

            <size
                android:width="50dp"
                android:height="50dp"/>
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/primary_dark"/>

            <size
                android:width="50dp"
                android:height="50dp"/>
            <corners
                android:radius="3dp" />

        </shape>
    </item>
</selector>